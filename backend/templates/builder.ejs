      if (heroEl) {
        var bgStart = heroEl.getAttribute('data-bg-start');
        var bgEnd = heroEl.getAttribute('data-bg-end');
        if (bgStart && bgEnd) {
          heroEl.style.background = 'linear-gradient(135deg, ' + bgStart + ', ' + bgEnd + ')';
        }
      }
    }
    applyHeroBackground();
    initEditableElements();

    // Focus chat input on load
    chatInput.focus();
