        let sectionsHTML = sections.map(section => {
          switch (section.type) {
            case 'hero':
              return generateHeroHTML(section.content, theme);
            case 'features':
              return generateFeaturesHTML(section.content);
            case 'about':
              return generateAboutHTML(section.content);
            case 'pricing':
              return generatePricingHTML(section.content);
            case 'contact':
              return generateContactHTML(section.content);
            case 'footer':
              return generateFooterHTML(section.content);
            default:
              return '';
          }
        }).join('');

        return `<!DOCTYPE html>
