<% title = 'Sign Up' %>
<link rel="stylesheet" href="/static/auth.css">
<%- include('./partials/favicon') %>

<style nonce="<%= cspNonce %>">
  .auth-form-container {
    text-align: center;
  }
  .auth-form-container p {
    margin: 20px 0;
    color: #666;
  }
  .redirect-note {
    background-color: #e7f3ff;
    border: 1px solid #b6d4fe;
    padding: 15px;
    border-radius: 8px;
    margin-bottom: 20px;
  }
</style>

<div class="auth-form-container">
  <h2>Create an Account</h2>

  <div class="redirect-note">
    <p>We use passwordless authentication for improved security.</p>
    <p>Simply enter your email on the login page and we'll send you a verification code.</p>
  </div>

  <a href="/auth/login" class="auth-button" style="display: inline-block; text-decoration: none;">
    Continue to Sign In
  </a>

  <div class="auth-links" style="margin-top: 20px;">
    Already have an account? <a href="/auth/login">Login</a>
  </div>
</div>

<script nonce="<%= cspNonce %>">
  // Auto-redirect to login page after 3 seconds
  setTimeout(function() {
    window.location.href = '/auth/login';
  }, 5000);
</script>
