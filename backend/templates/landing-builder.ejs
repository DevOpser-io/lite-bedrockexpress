        const secondaryColor = theme.secondaryColor || '#764ba2';
        const textColor = theme.textColor || '#1a1a1a';
        const bgColor = theme.backgroundColor || '#ffffff';

        // Generate CSS with theme colors using CSS custom properties
        const css = `
